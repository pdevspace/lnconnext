# ==============================================
# FRONTEND
# ==============================================
# Variables prefixed with NEXT_PUBLIC_ are accessible in the browser

# Firebase Client Configuration
# Get from: Firebase Console > Project Settings > General > Your apps

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Application URL
NEXT_PUBLIC_URL=http://localhost:3000

# ==============================================
# BACKEND
# ==============================================
# These variables are NOT accessible in the browser
# Only available in API routes and server components
# Firebase Admin SDK Configuration
# Method 1 (Recommended): Base64 encoded service account JSON
# Get from: Firebase Console > Project Settings > Service Accounts > Generate new private key
# Then run: cat serviceAccountKey.json | base64

FIREBASE_SERVICE_ACCOUNT_KEY=your_base64_encoded_service_account_json_here

# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/socialmedia?retryWrites=true&w=majority

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

NODE_ENV=development